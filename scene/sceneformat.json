// Notes:
//  - Vector = [X, Y, Z] = [float, float, float] any float value is accepted
//  - Color = [R, G, B] = [float, float, float] values between 0.0 and 1.0
{
  "Render": {
    "Camera": {
      "ImageWidth": int,
      "ImageHeight": int,
      // Camera position
      "Position": Vector,
      // What point the camera is looking at
      "LookAt": Vector,
      // Angle to rotate the camera around the direction it's looking
      "Rotation": float,
      // Field of view in degrees
      "FOV": float,
      // Background color
      "Background": Color

    },
    // Color of the scene's ambient light
    "AmbientLight": Color,
    "PointLights": [
      {
        "Position": Vetor,
        "Color": Color,
        "ConstCoeff": float,
        "LinearCoeff": float,
        "QuadCoeff": float
      },
      ...
    ]
  },
  "Materials": [
    {
      "Name": string,
      "Emissive": Color,
      "Ambient": Color,
      "Specualar": Color,
      "Reflective": Color,
      "Diffuse": Color,
      "Transmissive": Color,
      "Shininess": float,
      "Index": float
    },
    ... // Any number of materials, each with a unique "Name"
  ],
  "Scene": [
    {
      // Transform type affects all SubObjects and may be nested
      "Type": "Transform",
      "Properties": {
        "Translate": Vector,
        "Rotate": Vector,
        "Scale": Vector
      },
      "SubObjects": [
        {
          // Unit sphere, use transforms to change size and position
          "Type": "Sphere",
          "Properties": {
            // The "Name" of one of the Materials above
            "Material": string
          }
        },
        {
          // 3-sided polygon. The clockwise direction of the points is A -> B -> C
          "Type": "Triangle",
          "Properties": {
            "PointA": Vector,
            "PointB": Vector,
            "PointC": Vector,
            "Material": string
          }
        },
        ... // Other objects (possibly including nested trasforms)
      ]
    },
    ... // Other objects at the top level
  ]
}
